<Window
    Background="{DynamicResource MaterialDesignPaper}"
    Height="400"
    Icon="/Gress.Demo;component/favicon.ico"
    Style="{DynamicResource MaterialDesignRoot}"
    Title="Gress Demo"
    Width="500"
    WindowStartupLocation="CenterScreen"
    x:Class="Gress.Demo.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewModels="clr-namespace:Gress.Demo.ViewModels">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Aggregated progress  -->
        <GroupBox
            Grid.Row="0"
            Header="Overall"
            Margin="8">
            <StackPanel Orientation="Vertical">
                <!--  Overview  -->
                <TextBlock>
                    <Run Text="Operations:" />
                    <Run Foreground="{DynamicResource PrimaryTextBrush}" Text="{Binding Operations.Count, Mode=OneWay}" />
                    <Run />
                    <Run Text="Progress:" />
                    <Run Foreground="{DynamicResource PrimaryTextBrush}" Text="{Binding Progress.Current, Mode=OneWay}" />
                </TextBlock>

                <!--  Progress  -->
                <ProgressBar
                    Height="4"
                    Margin="0,16,0,0"
                    Value="{Binding Progress.Current.Fraction, Mode=OneWay}" />
            </StackPanel>
        </GroupBox>

        <!--  Operations  -->
        <GroupBox
            Grid.Row="1"
            Header="Operations"
            Margin="8">
            <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
                <ItemsControl HorizontalContentAlignment="Stretch" ItemsSource="{Binding Operations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Overview  -->
                                <TextBlock
                                    Foreground="{DynamicResource SecondaryTextBrush}"
                                    Grid.Column="0"
                                    Margin="0,2,0,0">
                                    <Run Text="Weight:" />
                                    <Run Foreground="{DynamicResource PrimaryTextBrush}" Text="{Binding Weight, Mode=OneWay}" />
                                    <Run />
                                    <Run Text="Progress:" />
                                    <Run Foreground="{DynamicResource PrimaryTextBrush}" Text="{Binding Progress.Current, Mode=OneWay}" />
                                </TextBlock>

                                <!--  Progress  -->
                                <ProgressBar
                                    Background="#0F000000"
                                    Foreground="{DynamicResource SecondaryAccentBrush}"
                                    Grid.Column="2"
                                    Maximum="1"
                                    Minimum="0"
                                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="{Binding Progress.Current.Fraction, Mode=OneWay}" />
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>

        <!--  New operation  -->
        <Grid Grid.Row="2" Margin="8,16,8,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Weight  -->
            <StackPanel
                Grid.Column="1"
                Orientation="Horizontal"
                VerticalAlignment="Center">
                <TextBlock FontSize="15">
                    <Run Text="Weight:" />
                    <Run Foreground="{DynamicResource PrimaryTextBrush}" Text="{Binding Value, ElementName=WeightSlider, Mode=OneWay}" />
                </TextBlock>
                <Slider
                    HorizontalAlignment="Left"
                    IsSnapToTickEnabled="True"
                    Margin="24,0,0,0"
                    Maximum="10"
                    Minimum="1"
                    TickFrequency="1"
                    Width="200"
                    x:Name="WeightSlider" />
            </StackPanel>

            <!--  Start button  -->
            <Button
                Command="{Binding StartOperationCommand}"
                CommandParameter="{Binding Value, ElementName=WeightSlider}"
                Content="START OPERATION"
                Grid.Column="2" />
        </Grid>
    </Grid>
</Window>